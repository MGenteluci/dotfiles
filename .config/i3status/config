general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W %essid"
        format_down = "W down"
}

battery all {
        format = "%status %percentage"
        status_bat = "ðŸ”‹"
        status_chr = "âš¡"
        status_full = "ðŸ”Œ"
}

cpu_usage {
        format = "CPU %usage"
}


memory {
        format = "RAM %percentage_used"
}

tztime local {
        format = "%a %d/%m/%Y %H:%M"
}
